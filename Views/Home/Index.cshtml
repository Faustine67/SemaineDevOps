@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-5 form-signin m-auto w-100 card">
    <form>
      <h1 class="h3 mb-3 fw-normal">Sélectionnez une entreprise.</h1>
  
      <div class="form-floating">
        <div class="mb-3">
          <label for="selectEntreprise" class="form-label">Entreprise</label>
          <select id="selectEntreprise" class="form-select">
            <option></option>
            <option>Entreprise1</option>
            <option>Entreprise2</option>
            <option>Entreprise3</option>
          </select>
        </div>    
      </div>
      <button class="btn btn-primary w-100 py-2" type="submit">Accéder au questionnaire</button>
      <a onclick="createEntreprise()">Votre entreprise n'est pas listée ? <u>Créer</u></a>


      <div class="mt-5 c-hide" id="containerCreation">
        <div class="card-body">
        <div class="my-1">
          <label for="nomEntreprise">Nom de l'Entreprise</label>
          <input class="form-control" id="nomEntreprise"type="text">
        </div>
        <div class="my-1">
          <label for="domaine">Domaine de l'entreprise</label>
          <input class="form-control" id="domaine"type="text">
        </div>
        <div class="my-1">
          <label for="adresseEntreprise">Adresse de l'entreprise</label>
          <input class="form-control" id="adresseEntreprise"type="text">
        </div>
        <div class="my-1">
          <label for="CP">Code Postal</label>
          <input class="form-control" id="CP"type="text">
        </div>
        <div class="my-1">
          <label for="ville">Ville</label>
          <input class="form-control" id="ville"type="text">
        </div>
        <button class="btn btn-primary w-100 py-2 my-3" type="submit">Créer</button>
      </div>
    </div>
 
    </form>
  </div> 